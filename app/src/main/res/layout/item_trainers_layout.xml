<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#fff"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layoutDirection="rtl"
 >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoPerson_CircleImageView_OrderDetailsAfterAcceptFragment"
            android:layout_width="70dp"
            android:layout_height="70dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/avater_person" />

        <ImageView

            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_status_offline"
            app:layout_constraintBottom_toBottomOf="@+id/photoPerson_CircleImageView_OrderDetailsAfterAcceptFragment"
            app:layout_constraintEnd_toEndOf="@+id/photoPerson_CircleImageView_OrderDetailsAfterAcceptFragment" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/photoPerson_CircleImageView_OrderDetailsAfterAcceptFragment"
            app:layout_constraintStart_toEndOf="@+id/photoPerson_CircleImageView_OrderDetailsAfterAcceptFragment"
            app:layout_constraintTop_toTopOf="@+id/photoPerson_CircleImageView_OrderDetailsAfterAcceptFragment">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هناء أحمد"
                android:textColor="#427CA9"
                android:textSize="16sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rate_img" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1359 ساعات الخبرة"

                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27 عام"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="(3 تقييمات)"
                android:textSize="16sp" />


        </LinearLayout>

        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#447DAA"
            app:cardCornerRadius="20dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photoPerson_CircleImageView_OrderDetailsAfterAcceptFragment">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="التسجيل للتدريب"
                    android:textColor="#fff" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>